<div>
  <% flash.each do |key, value| %>
      <% if value == 'Item added successfully!' %>
      <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
  <% end %>
  <%= form_for :item, url: "/add", :html => {:multipart => true} do |f| %>
  <fieldset>
      <legend>Add Item</legend>
      <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter item name', required: 'true' %>
      </div>
      <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', placeholder: 'Enter price in naira', required: 'true' %>
      </div>
      <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, ['Breakfast', 'Lunch', 'Dinner', 'Dessert', 'Fruit']%>
      </div>
      <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, required: 'true' %>
      </div>
      <div class="form-group">
      <%= f.submit "Add Item", class: "btn btn-success reg-btn" %>
      </div>
  </fieldset>
  <% end %>
</div>